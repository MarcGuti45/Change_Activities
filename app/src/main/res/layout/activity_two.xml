<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonTelefon"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:layout_marginBottom="32dp"
        android:text="@string/telefon"
        app:layout_constraintBottom_toTopOf="@+id/buttonMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/buttonMap"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:layout_marginBottom="39dp"
        android:text="@string/mapa"
        app:layout_constraintBottom_toTopOf="@+id/buttonMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonMail"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:layout_marginBottom="40dp"
        android:text="@string/mail"
        app:layout_constraintBottom_toTopOf="@+id/buttonWeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonWeb"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:layout_marginBottom="278dp"
        android:text="@string/web"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>